<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<!--
youtube: http://www.youtube.com/v/MrsGEz4NtBk
-->

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:p="urn:import:com.bramosystems.oss.player.uibinder.client">
    <ui:style field='x'>
        .panel {
            line-height: 1.5;
            margin: 2px 5%;
            padding: 5px;
        }
        .title {
            margin: 2px;
            padding: 5px;
            font-size: 120%;
            font-weight: bold;
            font-family: Georgia,serif;
        }
    </ui:style>

    <g:SimplePanel styleName='{x.panel}' >
        <p:Player name='QuickTimePlayer' mediaURL='gwt-module::big-buck-bunny.mp4' height='400px' width='90%' autoplay='false'
        showLogger='true' controllerVisible="true" resizeToVideoSize="true">
            <p:missingPluginNotice>
                <g:Label styleName='{x.title}'>Required Quicktime Plugin not available !</g:Label>
            </p:missingPluginNotice>
        </p:Player>
    </g:SimplePanel>
</ui:UiBinder>